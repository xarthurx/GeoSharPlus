namespace GeomBridge.FB;

struct Vector3d {
    x:double;
    y:double;
    z:double;
}

table MeshData {
    vertices:[Vector3d];
    faces:[int];  // Flattened face indices
    faceStride:uint = 3;  // Triangles by default
}

table PolylineData {
    vertices:[Vector3d];
    isClosed:bool = false;
}

union Geometry {
    MeshData,
    PolylineData
}

table GeometryBuffer {
    type: Geometry;
    data: [ubyte];
}
